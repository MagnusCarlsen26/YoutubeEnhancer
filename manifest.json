{
    "manifest_version": 3,
    "name": "Youtube Enhancer",
    "version": "1.0",
    "description": "Enhance the YouTube experience with custom features.",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://www.youtube.com/**"
    ],
    "action": {
      "default_icon": {
        "16": "favicon.png",   
        "48": "favicon.png",
        "128": "favicon.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/**" 
        ],
        "js": ["content.js"]
      }
    ]
  }
  